<div class="d-block mx-auto" style="">
  <h1>Articles</h1>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <!--<th>Abstract</th>-->
      <th>Author</th>
      <th>Status</th>
      <th colspan="3">Options</th>
    </tr>
    </thead>

    <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <!--<td><%#= article.abstract %></td>-->
          <td><%= article.author %></td>
          <td><%= article.status %></td>
          <td><%= link_to '', article, class: 'fa fa-eye' %></td>

          <% if article.user == current_user && (article.tcbec? || article.tcbr?) %>
              <td><%= link_to '', edit_article_path(article), class: 'fa fa-pencil' %></td>
          <% end %>

          <% if current_user.director? && article.rejected? %>
              <td><%= link_to '', article, method: :delete, data: {confirm: 'Are you sure?'}, class: 'fa fa-trash' %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
</div>