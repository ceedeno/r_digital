<div class="card">
  <div class="card-body">
    <h4 class="card-title"> Artículos</h4>
    <p class="card-text">Artículos incluidos en este número</p>
  </div>
  <ul class="list-group list-group-flush">


    <% @journal.articles.each do |article| %>

        <li class="list-group-item fa fa-">
          <%= article.title %>   <b><%='(Posición ' + article.position.to_s + ')' %></b>
          <%= link_to ' Ver', article&.file&.url, class: "fa fa-paperclip btn btn-info " %>

          <% unless @journal.published? %>
              <%= link_to "<span class='fa fa-remove'></span>".html_safe, article_path(id: article.id, article: {journal_id: 0, status: :approved}), method: :patch, remote: true, class: 'btn btn-danger', onclick: "" %>
          <% end %>
        </li>

        <br>

    <% end %>

  </ul>

</div>