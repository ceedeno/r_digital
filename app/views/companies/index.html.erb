<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Issn</th>
      <th>Electronic issn</th>
      <th>Legal deposit</th>
      <th>Creation date</th>
      <th>Indexing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.issn %></td>
        <td><%= company.electronic_issn %></td>
        <td><%= company.legal_deposit %></td>
        <td><%= company.creation_date %></td>
        <td><%= company.indexing %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

