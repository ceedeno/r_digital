<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form'}) do |f| %>
      <h3>Iniciar sesión</h3>
      <%= devise_error_messages! %>

      <div class="form-group">

        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>

        <%- if devise_mapping.registerable? %>
            <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right' %>
        <% end -%>
      </div>

      <div class="form-group">

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%- if devise_mapping.recoverable? %>
            <%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name), class: 'right' %>
        <% end -%>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:150px">
            <label>
              <%= f.check_box :remember_me %> Recuerdame
            </label>
          </div>
      <% end -%>
      <%= f.submit 'Iniciar sesión', class: 'btn btn-primary btn-block' %>

  <% end %>

</div>
