<div class="authform">

  <h3>Editar </h3>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :role => 'form'}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%#= f.label :name %>
        <%#= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        * <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>



      <%= f.fields_for :profile do |profile| %>



          <div class="form-group">
           * <%= f.label :last_name %>
            <%= profile.text_field :last_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            * <%= f.label :gender %>
            <%= profile.select :gender, User.genders.keys, class: 'form-control' %>
          </div>

          <div class="form-group">
            * <%= f.label :institution %>
            <%= profile.text_field :institution, class: 'form-control' %>
          </div>

          <div class="form-group">
            * <%= f.label :phone %>
            <%= profile.text_field :phone, class: 'form-control' %>
          </div>

          <div class="form-group">
            * <%= f.label :address %>
            <%= profile.text_field :address, class: 'form-control' %>
          </div>

          <div class="form-group">
            * <%= f.label :country %>
            <%= profile.text_field :country, class: 'form-control' %>
          </div>

          <div class="form-group">
           * <%= f.label :bio %>
            <%= profile.text_field :bio, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :web_site %>
            <%= profile.text_field :web_site, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :speciality %>
            <%= profile.text_field :speciality, class: 'form-control' %>
          </div>

      <% end %>


      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <fieldset>
        <p>Deje éstos campos vacíos si no quiere cambiar la clave.</p>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </fieldset>
      <fieldset>
        <p>Debe ingresar la contraseña actual para hacer cambios</p>
        <div class="form-group">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, class: 'form-control' %>
        </div>
      </fieldset>

      <hr>





      <%= f.submit 'Guardar', :class => '  btn-primary btn-block' %>
  <% end %>

</div>

<% if false %>

    <div class="authform">

      <h3>Cancel Account</h3>
      <p>Unhappy? We'll be sad to see you go.</p>
      <%= button_to "Cancel my account", registration_path(resource_name), :data => {:confirm => "¿Estás seguro?"}, :method => :delete, :class => 'button right' %>

    </div>

<% end %>