<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => 'form'}) do |f| %>
      <h3>Registrarse</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%#= f.label :name %>
        <%#= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>


      <div class="form-group">
        * <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <% f.fields_for :profile do |profile| %>



          <div class="form-group">
            <%= f.label :last_name %>
            <%= profile.text_field :last_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :gender %>
            <%= profile.select :gender, User.genders.keys, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :institution %>
            <%= profile.text_field :institution, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :phone %>
            <%= profile.text_field :phone, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :address %>
            <%= profile.text_field :address, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :country %>
            <%= profile.text_field :country, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :bio %>
            <%= profile.text_field :bio, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :web_site %>
            <%= profile.text_field :web_site, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :speciality %>
            <%= profile.text_field :speciality, class: 'form-control' %>
          </div>

      <% end %>

      <div class="form-group">
        * <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        * <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        * <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <hr>




      <br>
      <%= f.submit 'Registrarse', class: 'btn btn-primary btn-block' %>
  <% end %>

</div>
